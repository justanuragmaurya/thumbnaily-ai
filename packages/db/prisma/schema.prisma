generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(cuid())
  email        String         @unique
  credits      Int            @default(5)
  name         String
  avatar       String?        
  password     String?        
  updatedAt    DateTime       @updatedAt
  thumbnails Thumbnails[]
}

model Thumbnails{
  id String @id @default(cuid())
  prompt String
  link String
  createdAt DateTime @default(now())
  creatorID String
  creator User @relation(fields: [creatorID], references: [id])
  referenceImages ThumbnailReferenceImage[]
}


model ThumbnailReferenceImage {
  id          String     @id @default(cuid())
  url         String
  thumbnailId String
  thumbnail   Thumbnails @relation(fields: [thumbnailId], references: [id], onDelete: Cascade)
  createdAt   DateTime   @default(now())
}

model WaitlistUsers{
  id String @id @default(cuid())
  email String
  createdAt DateTime @default(now())
}